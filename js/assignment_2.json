{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Happiness Score in Countries between 2015 - 2019",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/spra0027/DataViz3179Ass2/main/data/all_years.csv"
  },
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "year_selection",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2019,
        "step": 1,
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/GrantL0006/FIT3179/main/js/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "key": "properties.NAME"
      },
      "as": "geo"
    },
    {"filter": "datum.Year == year_selection"}
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {"field": "Score", "type": "quantitative"},
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Score", "type": "quantitative"}
    ]
  }
}