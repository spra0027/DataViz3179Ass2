{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
      "title": "Happiness Score vs Extent of contribution of GDP per Capita 2015 - 2019",
      "width": 500,
    "height": 500,
    "data": {"url": "https://raw.githubusercontent.com/spra0027/DataViz3179Ass2/main/data/all_years.csv"
    },
        "transform": [
          {
            "lookup": "properties",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/spra0027/DataViz3179Ass2/main/data/all_years.csv",
                "format": {
                  "type": "csv"
                }
              },
              "key": "Country",
              "fields": []
            }
          },
          {"filter": "datum.Year == year_selection"}
        ],
    "params": [
      {
        "name": "year_selection",
        "value": 2016,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2019,
          "step": 1,
          "name": "Year Selection: "
        }
      }
    ], 
    "mark": "circle",
    "encoding": {
      "color": {"field": "GDP_Capita", "title": "Extent of GDP/Capita" ,"type": "quantitative",
        "scale": {
            "range": ["red", "green"]
        }
      },
      "x": {"field": "Score", "type": "quantitative", "title": "Happiness Score"},
      "y": {"field": "GDP_Capita", "type": "quantitative",  "title":   "GPD per Capita "},
      
      "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Score", "type": "quantitative", "title": "Happiness Score"},
          {"field": "GDP_Capita", "type": "quantitative", "title": "Extent of GDP/Capita"}
      ],

      "size": {
        "field": "Score",
        "type": "quantitative",
        "scale": {
        "type": "threshold",
        "domain": [0, 5, 10],
        "range": [20, 50, 150, 200, 300, 400]
        },
        "legend": {"format": ".1s", "title": "Happiness Score"}
        }
    },
    "config": {}
    
  }
  